/* pages/about/aboutUs.wxss */
.top_img{
  width: 100%;
}
.title{
  width: 100%;
  height: 70rpx;
  background-color: #F1F1F1;
  color: #333333;
  line-height:80rpx;
  font-size:12pt;
  padding-left:30rpx;
}
.intro{
  display:flex;
  width: 100%;
  padding:30rpx 20rpx;
  font-size:11pt;
  color: #333333;
  flex-direction:column;
  box-sizing:border-box;
}
.intro text{
  padding: 10rpx;
}
.list_item{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  line-height: 80rpx;
  padding: 0rpx 30rpx;
}
.list_item > image:first-child {
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx;
}
.list_item > text{
  width: 80%;
  margin: 0rpx 20rpx;
  font-size:11pt;
  color:#333333;
}
.list_item > image:last-child {
  width: 30rpx;
  height: 30rpx;
  margin-top: 20rpx;
}
.line{
  width: 100%;
  height: 5rpx;
  background-color: #F1F1F1;
}
.qrcode{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:30rpx;
}
.qrcode > image{
  width:160rpx;
  height:160rpx;
}
.qrcode > text{
  font-size: 10pt;
}
