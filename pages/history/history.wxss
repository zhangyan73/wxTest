/* pages/history/history.wxss */
page{
  background-color: #f1f1f1;
}
.piao_type{
  display: flex;
  width: 60%;
  height: 70rpx;
  background-color: #E5F2F9;
  border-radius: 100rpx;
  margin:30rpx 20%;
}
.piao_type_item{
  display:block;
  width:50%;
  height:100%;
  line-height:70rpx;
  text-align:center;
  border-radius:100rpx;
  color: #007CC2;
  font-size: 11pt;
}
.active_blue{
  background-color:#007CC2;
  color: #FFFFFF;
}
.list{
  display: flex;
  flex-direction: row;
  margin: 20rpx 30rpx;
  background-color:#ffffff;
  padding:10rpx;
  border-radius:10rpx;
}
.list > image{
  width:200rpx;
  height: 200rpx;
}
.list > view{
  display:block;
  margin-left:10rpx;
  color:#666666;
  font-size:10pt;
}
.list .title{
  color:#333333;
  font-size:11pt;
  font-weight:bold;
}
.title+view{
  margin-top: 10rpx;
}
.list .money{
  color:red;
  font-size:11pt;
  font-weight:bold;
  margin: 20rpx 0rpx;
}
.list_empty{
  text-align: center;
  margin-top: 30%;
}
.list_empty > image{
  width: 500rpx;
  height: 300rpx;
}
